#!/usr/bin/env python

"""
Parallel build of the HTML slide decks and Jupyter notebooks
"""

# Standard Python Library
import subprocess
import sys

targets = [
    "intro",
    "models",
    "simulation",
    "well-posedness",
    "asymptotic",
    "LTI-models",
    "internal-dynamics",
    "IO-dynamics",
    "controllability",
    "asymptotic-stabilization",
    "optimal-control",
    "observers",
]

processes = []

for target in targets:
    cmd = ["./build.py"]
    if "--fast" in sys.argv[1:]:
        cmd.append("--fast")
    cmd.append(f"{target}.md")
    processes.append(subprocess.Popen(cmd)) # start in the background

sys.exit(0 if all(p.wait() == 0 for p in processes) else 1)
